<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PINAC.ConsultationPage">
    <ContentPage.Content>
        <TableView>
            <TableRoot>

                <TableSection Title="Informations générales">
                    <EntryCell Label="Date:" Text="{Binding dateHeureRDV}"/>
                    <EntryCell Label="Motif:" Text="{Binding libelle}" />
                </TableSection>

                <TableSection>
                    <SwitchCell x:Name="ConfirmeRdv" Text="Confirmer le RDV"/>
                </TableSection>

            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>