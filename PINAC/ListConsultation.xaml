<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PINAC.ListConsultation">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">

            <SearchBar x:Name="searchDossierPatient" Placeholder="Recherche du dossier patient" HorizontalOptions="FillAndExpand" SearchButtonPressed="searchDossierPatient_SearchButtonPressed"/>

            <StackLayout Orientation="Vertical">

                <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                    <Label Text="Date/Heure | " FontAttributes="Bold"/>
                    <Label Text="Motif | " FontAttributes="Bold"/>
                    <Label Text="Urgent " FontAttributes="Bold"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <ListView x:Name="listConsultation"/>
                </StackLayout>
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>